<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FC_TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:freezesText">true</item>
    </style>

    <style name="FC_SmallTextStyle" parent="FC_TextViewStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FC_NormalTextStyle" parent="FC_TextViewStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FC_LargeTextStyle" parent="FC_TextViewStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FC_LargerTextStyle" parent="FC_TextViewStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="FC_HugeTextStyle" parent="FC_TextViewStyle">
        <item name="android:textSize">50sp</item>
    </style>

    <style name="CkVoiceCallStyle">
        <item name="android:layout_width">@dimen/img_voicecall_assist_size</item>
        <item name="android:layout_height">@dimen/img_voicecall_assist_size</item>
        <item name="android:button">@null</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
